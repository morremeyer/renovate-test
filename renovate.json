{
  "extends": ["github>anaconda/renovate-config"],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.tf$"
      ],
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "v(?<version>.*)$",
      "matchStrings": [
        "renovate\\s+terraform_version\\s+=\\s\"(?<currentValue>.*)\""
      ]
    }
  ]
}
